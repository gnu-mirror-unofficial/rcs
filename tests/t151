. $srcdir/common
split_std_out_err no

super=grcs

$super --version | grep 'GNU RCS' || exit 77

must '$super --commands'

bad="$super no-such-command"

$bad && problem "‘$bad’ did not fail"

exit 0

# t151 ends here
